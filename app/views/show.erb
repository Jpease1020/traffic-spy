<%= erb(:'partials/nav_bar', :layout => true) %>

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <div id= 'header'>
        <h1><%= @source.identifier.capitalize %> Dashboard</h1>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <div id="most_viewed">
        <h3> Most Viewed Urls</h3>
        <ol>
        <% @slugs.each do |slug| %>
          <li><%= slug %></li>
        <% end %>
        </ol>
        </br>
      </div>

      <div id="average_responses">
        <h3>Average Response Times</h3>
          <ul>
            <li>PUT stuff here</li>
        </ul>
        </br>
      </div>

      <div id="breakdown">
        <h3> Web Broswer Breakdown</h3>
        <ul>
          <% @browser_counts.each do |b| %>
           <li><%= b[0]%>: <%= b[1]%></li>
            <% end %>
          </ul>
        </br>
      </div>

      <div id="resolution">
        <h3>Screen Resolutions</h3>
        <ul>
          <% @resolutions.each do |resolution| %>
            <li><%= resolution.resolution_width %> x <%=
            resolution.resolution_height %></li>
          <% end %>
        </ul>
        </br>
      </div>

      <div id="os">
        <h3>Operating System Breakdown</h3>
        <ul>
          <% @os_counts.each do |os| %>
            <li><%= os[0] %>: <%= os[1] %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="url">
  <div class="container">
    <div class="row well">
      <div class="col-md-12">
        <h3 >Url Specific Data</h3>
        </br>
         <% @paths.each do |path| %>
            <a href="http://localhost:9393/sources/<%= @source.identifier %>/urls<%= path %>">http://localhost:9393/sources/<%= @source.identifier %>/urls<%= path %></a>
          </br>
         <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <a href="/sources/<%= @source.identifier %>/events">Events</a>
      </br>
    </div>
  </div>
</div>

<%= erb(:'partials/footer', :layout => true) %>
