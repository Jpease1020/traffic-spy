<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <div id= 'header'>
        <h1><%= @event.event_name.capitalize %> Stats</h1>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <div id= 'hourly'>
        <h2>Total Visits: <%= @visits %></h2>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-bordered">
    </br>
    <thead>
      <tr>
        <th>Hour</th>
        <th>Visits</th>
      </tr>
    </thead>
    <tbody>
      <% 24.times do |n| %>
      <tr>
        <td><%= n+1 %>:00</td>
        <td><%= @visits_per_hour.fetch(n+1, 0) %></td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <a href="/sources/<%= @source.identifier %>/events">Events</a>
      </br>
    </div>
  </div>
</div>


<%= erb(:'partials/footer', :layout => true) %>